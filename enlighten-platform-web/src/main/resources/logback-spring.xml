<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 日志目录，默认 /opt/enlighten/logs/app，可被环境变量 LOG_DIR 覆盖 -->
    <property name="LOG_HOME" value="${LOG_DIR:-/opt/enlighten/logs/app}"/>

    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/app.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>false</includeContext>
        </encoder>
    </appender>

    <logger name="org.springframework" level="INFO"/>
    <logger name="com.zhongjia" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="JSON_FILE"/>
    </root>
</configuration>


